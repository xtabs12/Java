    private void jButton16ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        String abac = jTextField1.getText();
        int abacde = Integer.parseInt(abac);
        BigInteger abacdef = Factorial.BigIntegers(abacde);
        abac = abacdef.toString();
        jTextField2.setText(abac);
    }                                         

    private void jButton17ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        String abac = jTextField1.getText();
        String abacd = abac.substring(0, abac.length() - 1);
        jTextField1.setText(abacd);
    }                                         

